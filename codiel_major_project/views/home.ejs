<h1>Codiel / <%= title%></h1>

<section>
  <h4>Posts</h4>
  <form action="/posts/create" id="new-post-form" method="POST">
    <textarea name="content" cols="30" rows="3"></textarea>
    <input type="submit" value="Post" />
  </form>
  <div id="posts-list-container">
    <ul>
      <% for (post of posts) {%>
      <li>
        <%=post.content %>
        <br />
        <small style="color: black"> <%= post.user.name%> </small>
      </li>

      <%}%>
    </ul>
  </div>
</section>
